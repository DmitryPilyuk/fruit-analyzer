@namespace FruitComponent
@rendermode InteractiveServer

<RadzenChart SeriesClick=@OnSeriesClick 
    Style="position: relative; display: flex; width: 400px; height: 400px; margin-top: 50px">
    <RadzenPieSeries Fills=@(new [] { "#E9D66B", "#FF0800", "#9F8170", "#9966CC", "#E25822" })
                     Data="@revenue" 
            Title="Probability" 
            CategoryProperty="Fruit" 
        ValueProperty="Probability">

        </RadzenPieSeries>
        <RadzenValueAxis Max="100" Min="0"></RadzenValueAxis>
        <RadzenLegend Position="Radzen.Blazor.LegendPosition.Top" Visible="true"></RadzenLegend>
</RadzenChart>

