@namespace FruitComponent
@rendermode InteractiveServer

<RadzenProgressBar @bind-Value="@value" Visible="@visible" ProgressBarStyle="Radzen.ProgressBarStyle.Secondary" Style="background-color: var(--rz-secondary-lighter); width: 90%" />

<style>
    .rz-progressbar-label-value {
    color: var(--rz-secondary);
    }
</style>

@code {

    [Parameter, EditorRequired]
    public double value { get; set; } = 0;

    [Parameter, EditorRequired]
    public bool visible { get; set; } = true;
}
