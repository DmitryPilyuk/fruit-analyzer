@page "/"
@using FruitComponent
@using FruitAnalyzerFront.AppLogic


<RadzenColumn AlignItems="Radzen.AlignItems.Center" JustifyContent="Radzen.JustifyContent.Center">

	<FruitUploader />
	<FruitProgressBar visible=@getProgressBarVisibility() value="15" />
	<FruitAnalyzeButton visible=@getAnalyzeButtunVisibility() onClick=@(args => Console.WriteLine("123")) />
	<FruitChart visible=@getChartVisibility() />

</RadzenColumn>

@code {
	private ImageStatus currentImageStatus = ImageStatus.Missing;

	public bool getProgressBarVisibility() => currentImageStatus == ImageStatus.Uploading;
	public bool getAnalyzeButtunVisibility() => currentImageStatus == ImageStatus.Uploaded;
	public bool getChartVisibility() => currentImageStatus == ImageStatus.Analyzed;
}
