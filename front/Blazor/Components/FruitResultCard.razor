@namespace FruitComponent

<RadzenCard class="rz-shadow-4 rz-border-radius-4" Style="width: 50%; background-color: var(--rz-secondary)" Visible=@visible>
    <RadzenRow JustifyContent="JustifyContent.Start" class="rz-p-4">
        <RadzenColumn>
            <RadzenText TextStyle="TextStyle.DisplayH3"><b><u>@fruitName</u></b></RadzenText>
            <RadzenText TextStyle="TextStyle.DisplayH4"><b>@getProbabilityString()</b></RadzenText>
        </RadzenColumn>
    </RadzenRow>
</RadzenCard>

<style>
    .shadows div {
    padding: 1rem;
    width: 10rem;
    text-align: center;
    }

    .rz-text-display-h3, .rz-text-display-h4 {
        color: var(--rz-white);
    }
</style>

@code {
    [Parameter, EditorRequired]
    public bool visible { get; set; } = true;

    [Parameter, EditorRequired]
    public string fruitName { get; set; } = "";

    [Parameter, EditorRequired]
    public double fruitProbability { get; set; }

    string getProbabilityString() 
    {
        var roundProbability = (int) Double.Round(this.fruitProbability);

        return $"{roundProbability}%";
    }
}
